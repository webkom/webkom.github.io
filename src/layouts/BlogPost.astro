---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, author, description, pubDate, updatedDate } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={`${title} - Webkombloggen`} description={description} />
    <style>
      main {
        width: calc(100% - 2em);
        max-width: 100%;
        margin: 0;
      }
      .back {
        width: 720px;
        max-width: calc(100% - 2em);
        margin: auto;
      }
      .back a {
        text-decoration: none;
      }
      .prose {
        width: 720px;
        padding-top: 1rem;
        max-width: 100%;
        margin: auto;
        color: rgb(var(--gray-dark));
      }
      .title {
        margin-bottom: 1em;
        padding: 1em 0;
        text-align: center;
        line-height: 1;
      }
      .title h1 {
        margin: 0 0 0.5em 0;
      }
      .author-and-date {
        margin-bottom: 0.5em;
        color: rgb(var(--gray));
      }
      .author-and-date a {
        text-decoration: none;
      }
      .last-updated-on {
        font-style: italic;
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <div class="back">
        <a href="/">‚Üê Tilbake</a>
      </div>
      <article>
        <div class="prose">
          <div class="title">
            <div class="author-and-date">
              <a href={`https://github.com/${author}`}>{author}</a> -
              <FormattedDate date={pubDate} />
              {
                updatedDate && (
                  <div class="last-updated-on">
                    Oppdatert <FormattedDate date={updatedDate} />
                  </div>
                )
              }
            </div>
            <h1>{title}</h1>
            <hr />
          </div>
          <slot />
        </div>
      </article>
      <div>
        <script
          src="https://utteranc.es/client.js"
          repo="webkom/webkom.github.io"
          label="post_comment"
          issue-term="pathname"
          theme="github-light"
          crossorigin="anonymous"
          async></script>
      </div>
    </main>
    <Footer />
  </body>
</html>
